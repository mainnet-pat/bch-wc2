{
  "compilerOptions": {
    "jsx": "react",
    "target": "es2022",
    "module": "esnext",
    "declaration": true,
    "lib": ["es2022", "dom"],
    "sourceMap": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/dist-test"]
}
